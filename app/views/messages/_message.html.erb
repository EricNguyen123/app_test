<div class="cont-<%= message.user.id %>" id="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <div class=" d-flex align-items-center">
      <%= gravatar_for message.user, size: 20 %> 
      <h6 class="name"> <%= message.user.name %> </h6>
    </div>
    <%= message.message %>
    <div class="message-delete" id="message-<%= message.id %>">
      <%= link_to "delete", chat_room_message_path(message.chat_room_id, message.id), data: { turbo_method: :delete, confirm: "You sure?" } %>
    </div>
  </div>
</div>
